import React from "react";
import { View, Text, Image, FlatList, StyleSheet } from "react-native";
import { useNavigation } from "@react-navigation/native";
import { NativeStackNavigationProp } from "@react-navigation/native-stack";
import { RootStackParamList } from "../navigation/AppNavigator";
import TabBar from "../components/TabBar";

const items = [
  { id: "1", title: "Item 1", image: "https://via.placeholder.com/150", description: "Description 1" },
  { id: "2", title: "Item 2", image: "https://via.placeholder.com/150", description: "Description 2" },
  { id: "3", title: "Item 3", image: "https://via.placeholder.com/150", description: "Description 3" },
  { id: "4", title: "Item 4", image: "https://via.placeholder.com/150", description: "Description 4" },
  // Add more items as needed
];

export default function Article() {
  const navigation =
      useNavigation<NativeStackNavigationProp<RootStackParamList>>();

  const renderItem = ({ item }: { item: { id: string; title: string; image: string; description: string } }) => (
      <View style={styles.itemContainer}>
        <View style={styles.textContainer}>
          <Text style={styles.itemTitle}>{item.title}</Text>
          <Text style={styles.itemDescription}>{item.description}</Text>
        </View>
        <Image source={{ uri: item.image }} style={styles.itemImage} />
      </View>
  );

  return (
      <>
        <View style={styles.container}>
          <Text style={styles.header}>Article</Text>
          <FlatList
              data={items}
              renderItem={renderItem}
              keyExtractor={(item) => item.id}
              numColumns={1}
              contentContainerStyle={styles.list}
          />
        </View>
        <TabBar />
      </>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: "#FFFFFF",
    paddingTop: 40,
  },
  header: {
    fontSize: 30,
    fontFamily: "Poppins_Bold",
    textAlign: "left",
    marginLeft: 28,
    marginTop: 10,
  },
  list: {
    paddingHorizontal: "5%",
  },
  itemContainer: {
    flexDirection: "row",
    flex: 1,
    marginVertical: "5%",
    borderColor: "#D0D0D0",
    borderRadius: 18,
    overflow: "hidden",
  },
  itemImage: {
    width: 150,
    height: 150,
  },
  textContainer: {
    flex: 1,
    padding: 10,
  },
  itemTitle: {
    fontSize: 16,
    paddingVertical: 10,
    fontWeight: "bold",
  },
  itemDescription: {
    fontSize: 14,
    marginTop: 5,
  },
});
